<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <ca.uwaterloo.ewslee.boardcast.CanvasView
        android:id="@+id/signature_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#FFFFFF" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/clear"
        android:layout_width="200px"
        android:layout_height="100px"
        android:onClick="clearBoard"
        android:text="Clear" />

    <Button
        android:id="@+id/eraser"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_width="200px"
        android:layout_height="100px"
        android:layout_toRightOf="@+id/clear"
        android:onClick="eraser"
        android:text="Erase" />

        <Button
            android:id="@+id/black"
            android:backgroundTint="#000000"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_toRightOf="@+id/eraser"
            android:onClick="black" />

     <Button
         android:id="@+id/red"
         android:backgroundTint="#ff0000"
         android:layout_width="100px"
         android:layout_height="100px"
         android:layout_toRightOf="@+id/black"
         android:onClick="red" />

        <Button
            android:id="@+id/blue"
            android:backgroundTint="#0000ff"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_toRightOf="@+id/red"
            android:onClick="blue" />

        <Button
            android:id="@+id/green"
            android:backgroundTint="#00ff00"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_toRightOf="@+id/blue"
            android:onClick="green" />

        <Button
            android:id="@+id/yellow"
            android:backgroundTint="#ffff00"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_toRightOf="@+id/green"
            android:onClick="yellow" />

        <Button
            android:id="@+id/undo"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_toRightOf="@+id/yellow"
            android:onClick="undo"
            android:text="←" />

    </RelativeLayout>
</FrameLayout>